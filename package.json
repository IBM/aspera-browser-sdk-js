{
  "name": "@ibm-aspera/aspera-desktop-sdk-js",
  "version": "1.0.0",
  "author": "IBM Aspera Desktop Group",
  "private": true,
  "main": "commonjs/index.js",
  "types": "commonjs/index.d.ts",
  "scripts": {
    "build": "rm -rf ./dist && webpack --mode=production",
    "build:module": "tsc --project tsconfig.module.json",
    "dev": "webpack --mode development",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "docs": "typedoc src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@github.ibm.com:Aspera/aspera-desktop-sdk-ts.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.4",
    "ts-loader": "^9.4.2",
    "typedoc": "^0.17.7",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  }
}
